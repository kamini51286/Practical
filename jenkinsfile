pipeline {
    agent any

    stages {
        stage('Setup') {
            steps {
                // Install dependencies
                bat 'pip install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                bat 'pytest --html=report.html'
            }
        }

        stage('Publish Report') {
            steps { 
                publishHTML([ 
                    reportDir: '.', 
                    reportFiles: 'report.html', 
                    reportName: 'Test Report'
                ])
            }
        }
    }
}
