pipeline {
    agent any  // Runs on any available Jenkins agent

    environment {
        // Optional: Specify Python version if you're using pyenv/virtualenvs
        PY_PATH = 'C:\\Users\\Kamini\\AppData\\Local\\Programs\\Python\\Python312\\python.exe'
    }

    stages {
        
        stage('Install dependencies') {
            steps {
                echo 'Installing dependencies...'
                bat '%PY_PATH% --version'
                bat '%PY_PATH% -m pip install --upgrade pip'
                bat '%PY_PATH% -m pip install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                echo 'Running tests with pytest...'
                bat '%PY_PATH% -m pytest tests/'
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
        success {
            echo 'All tests passed ✅'
        }
        failure {
            echo 'Some tests failed ❌'
        }
    }
    }